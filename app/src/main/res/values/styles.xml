<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pokeAppPrimary</item>
        <item name="colorPrimaryDark">@color/pokeAppPrimaryDark</item>
        <item name="colorAccent">@color/pokeAppAccent</item>
    </style>

    <style name="ToolbarThemePrimary" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/pokeAppPrimary</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/pokeAppTextLight</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/pokeAppTextLight</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/pokeAppTextLight</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/pokeAppTextLight</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/pokeAppTextLight</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/pokeAppTextLight</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

</resources>
